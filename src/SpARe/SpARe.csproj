<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>midare160</Authors>
    <RootNamespace>Spare</RootNamespace>
    <Copyright>©2020-2021 midare160</Copyright>
    <RepositoryUrl>https://github.com/midare160/SpARe</RepositoryUrl>

    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <StartupObject>Spare.Program</StartupObject>
    <Nullable>enable</Nullable>
    <ApplicationIcon>Resources\logo.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <PublishTrimmed>true</PublishTrimmed>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <None Update="Data\spotify_installer1.0.8.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <Link>spotify_installer1.0.8.exe</Link>
    </None>
  </ItemGroup>

</Project>
