<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>midare160</Authors>
    <Copyright>©2020-2021 midare160</Copyright>
    <Company>SpARe</Company>
    <Version>2.0.0</Version>
    <RepositoryUrl>https://github.com/midare160/SpARe</RepositoryUrl>

    <StartupObject>Spare.Program</StartupObject>
    <RootNamespace>Spare</RootNamespace>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
    <ApplicationIcon>Resources\logo.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release-FrameworkDependent' Or '$(Configuration)' == 'Release-SelfContained'">
    <PublishSingleFile>true</PublishSingleFile>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release-SelfContained'">
    <SelfContained>true</SelfContained>
    <PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release-FrameworkDependent'">
    <SelfContained>false</SelfContained>
  </PropertyGroup>

  <ItemGroup>
    <None Update="Data\spotify_installer1.0.8.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <Link>spotify_installer1.0.8.exe</Link>
    </None>
  </ItemGroup>

   <Target Name="ZipPublishOutput" AfterTargets="Publish"> 
     <Exec Command="powershell Compress-Archive '$(PublishDir)*.exe' '$(PublishDir)$(Configuration)_v$(Version)_$(RuntimeIdentifier).zip' -Force" />
   </Target> 

</Project>
